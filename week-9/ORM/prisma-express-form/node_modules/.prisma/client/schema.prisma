datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  firstName  String?
  lastName   String?
  name       String?      // optional full name for compatibility
  email      String   @unique
  password   String   // hashed password (bcrypt)
  createdAt  DateTime @default(now())
}
